# ===========================================
# SolidFind Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_APP_NAME=SolidFind
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENVIRONMENT=development

# ===========================================
# Database (PostgreSQL/Supabase)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost:5432/solidfind
# DIRECT_URL=postgresql://user:password@localhost:5432/solidfind

# Supabase (if using)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Authentication
# ===========================================
# NextAuth.js
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# OAuth Providers (if needed)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# ===========================================
# Email/SMTP (for newsletters, notifications)
# ===========================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@solidfind.id

# ===========================================
# File Storage/Upload
# ===========================================
# Cloudinary
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# AWS S3 (alternative)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=solidfind-uploads

# ===========================================
# Analytics & Monitoring
# ===========================================
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (auto-enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ===========================================
# Third-party APIs
# ===========================================
# Google Maps (for location features)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# WhatsApp Business API (for contact features)
# WHATSAPP_API_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=

# ===========================================
# Payment Gateway (for PRO subscriptions)
# ===========================================
# Stripe
# STRIPE_PUBLIC_KEY=pk_test_xxx
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# Midtrans (Indonesia payment gateway)
# MIDTRANS_SERVER_KEY=
# MIDTRANS_CLIENT_KEY=
# MIDTRANS_IS_PRODUCTION=false
